<Page x:Class="Provider.gui.SupplierGroupBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Provider.gui"
      mc:Ignorable="d" 
      d:DesignHeight="499" d:DesignWidth="626"
      Title="Page">
    <Page.Resources>
        <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FF25718F"/>
        <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FF2286AE"/>
        <Style x:Key="ButtonStyle1" TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ContentPresenter x:Name="contentPresenter" Focusable="False" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Margin="{TemplateBinding Padding}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" OpacityMask="#FF0E5470"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.MouseOver.Background}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Setter Property="Background" TargetName="border" Value="{StaticResource Button.Pressed.Background}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="White">
        <GroupBox x:Name="groupBox" Header="Beskrivelse" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Height="154" Width="586" FontFamily="Yu Gothic UI" FontSize="16">
            <TextBox x:Name="Description" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur libero tortor, eleifend at mollis eget, convallis a nisi. Curabitur leo lorem, eleifend et orci et, semper feugiat dolor. Suspendisse fringilla sagittis ex sit amet tempor. Mauris venenatis, elit in sagittis convallis, ex sapien suscipit neque, vel eleifend elit arcu facilisis tellus. Proin vestibulum convallis tortor, ac suscipit lectus fringilla vel. Phasellus eu lacinia dui, et gravida mi. Phasellus tincidunt bibendum justo. Pellentesque sed interdum est, vel auctor felis. Fusce ac libero aliquam, accumsan lacus ullamcorper, tempus lorem. In hac habitasse platea dictumst. Mauris scelerisque, urna nec gravida cursus, dolor ante suscipit nisl, ut dictum lorem ligula quis magna. Nullam auctor ante urna, quis hendrerit magna congue vitae. Phasellus tempus hendrerit diam posuere congue. Praesent id risus quis nibh tincidunt elementum. Quisque sed placerat elit, quis tristique metus." VerticalAlignment="Top" Height="130" Width="560" Margin="10,0,0,-4" FontSize="12" BorderBrush="{x:Null}" />
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="Lokation" HorizontalAlignment="Left" Margin="20,185,0,0" VerticalAlignment="Top" Height="60" Width="280" FontFamily="Yu Gothic UI" FontSize="16">
            <TextBox x:Name="Location" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." VerticalAlignment="Top" FontSize="12" Width="254" BorderBrush="{x:Null}"/>
        </GroupBox>
        <GroupBox x:Name="groupBox1_Copy" Header="Kontaktinformation" HorizontalAlignment="Left" Margin="326,185,0,0" VerticalAlignment="Top" Height="60" Width="280" FontFamily="Yu Gothic UI" FontSize="16">
            <TextBox x:Name="ContactInformation" HorizontalAlignment="Left" Margin="8,0,0,0" TextWrapping="Wrap" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." VerticalAlignment="Top" FontSize="12" Width="256" BorderBrush="{x:Null}"/>
        </GroupBox>
        <GroupBox x:Name="groupBox_Copy" Header="Note" HorizontalAlignment="Left" Margin="20,270,0,0" VerticalAlignment="Top" Height="154" Width="586" FontFamily="Yu Gothic UI" FontSize="16">
            <TextBox x:Name="noteTextBox" HorizontalAlignment="Left" Height="129" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="576" Margin="0,0,-2,-3" BorderBrush="{x:Null}" FontSize="12" IsReadOnly="True"/>
        </GroupBox>
        <Button x:Name="editNote" Content="Rediger Notater" HorizontalAlignment="Left" Margin="20,438,0,0" VerticalAlignment="Top" Width="112" Click="EditNote" Background="#FF0E5774" BorderBrush="{x:Null}" Foreground="White" Style="{DynamicResource ButtonStyle1}"/>
        <StackPanel x:Name="editerBox" Orientation="Horizontal" HorizontalAlignment="Left" Height="20" Margin="146,440,0,0" VerticalAlignment="Top" Width="304">
            <TextBlock x:Name="textBlock2" Margin="0,0,5,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Sidst redigeret:" VerticalAlignment="Top"/>
            <TextBlock x:Name="lastEdited" Margin="0,0,5,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock3" Margin="0,0,5,0" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Af: " VerticalAlignment="Top"/>
            <TextBlock x:Name="lastEditor" Margin="0,0,5,0" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </StackPanel>
        <Button x:Name="editPage" Content="Rediger informationer" HorizontalAlignment="Left" Margin="22,249,0,0" VerticalAlignment="Top" Width="130" Click="ManageSupplierPage" Background="#FF0E5774" BorderBrush="{x:Null}" Foreground="White" Style="{DynamicResource ButtonStyle1}"/>
    </Grid>
</Page>
