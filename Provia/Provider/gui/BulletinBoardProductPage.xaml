<Page x:Class="Provider.gui.BulletinBoardProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Provider.gui"
      mc:Ignorable="d" 
      d:DesignHeight="499" d:DesignWidth="626"
      Title="Page" WindowWidth="413" Height="512" Width="480">

    <Grid Background="White">
        <TextBlock HorizontalAlignment="Left" Margin="33,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="158" FontSize="18"><InlineUIContainer>
                <TextBlock x:Name="postTitel" TextWrapping="Wrap" Width="159" IsEnabled="False"/>
            </InlineUIContainer></TextBlock>
        <TextBlock x:Name="postOwner" HorizontalAlignment="Left" Margin="99,55,0,0" TextWrapping="Wrap" VerticalAlignment="Top" RenderTransformOrigin="0.284,0.815" Width="144" IsEnabled="False"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="33,55,0,0" TextWrapping="Wrap" Text="Oprettet af:" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBox x:Name="postDesciption" HorizontalAlignment="Left" Height="310" Margin="33,125,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="397" IsEnabled="False"/>
        <Button x:Name="editPostButton" Content="Rediger" HorizontalAlignment="Left" Margin="33,464,0,0" VerticalAlignment="Top" Width="75" Click="EditPost"/>
        <Button x:Name="deletePostButton" Content="Slet" HorizontalAlignment="Left" Margin="355,464,0,0" VerticalAlignment="Top" Width="75" Background="#FFDB2828" BorderBrush="#FF707070" Foreground="White"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="33,76,0,0" TextWrapping="Wrap" Text="Den" VerticalAlignment="Top" IsEnabled="False"/>
        <TextBlock x:Name="postDateLabel" HorizontalAlignment="Left" Margin="59,76,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="89" IsEnabled="False"/>
        <TextBlock x:Name="typeOfPost" HorizontalAlignment="Left" Margin="33,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="115"/>
        <Button x:Name="saveButton" Content="Gem" HorizontalAlignment="Left" Margin="168,464,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Page>
