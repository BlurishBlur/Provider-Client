<Page x:Class="Provider.gui.SupplierList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Provider.gui"
      mc:Ignorable="d" 
      d:DesignHeight="659" d:DesignWidth="1139"
      Title="Page">
    <Page.Resources>
        <Style TargetType="ListViewItem">
            <EventSetter Event="MouseDoubleClick" Handler="ViewSupplierInformation"/>
        </Style>
    </Page.Resources>

        <Grid Background="White">
        <ListView x:Name="listView" HorizontalAlignment="Left" Height="659" VerticalAlignment="Top" Width="1139" GridViewColumnHeader.Click="SortSupplierInformation">
            <ListView.View>
                <GridView>
                    
                    <GridViewColumn Header="Name" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Troværdighed" Width="100" DisplayMemberBinding="{Binding Credibility}"/>
                    <GridViewColumn Header="Note" Width="300" DisplayMemberBinding="{Binding Note}" />

                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Page>
