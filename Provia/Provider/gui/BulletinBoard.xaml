            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="nyPost" Content="Opret Post" HorizontalAlignment="Left" Margin="91,593,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1" Content="Rediger" HorizontalAlignment="Left" Margin="870,593,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Margin="1071,593,0,0" VerticalAlignment="Top" Width="68"/>

    </Grid>
</Page>
